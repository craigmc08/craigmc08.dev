<footer>
    <grid>
        <div col="1/3">
            <h5>Social Media</h5>
            <ul class="link-list">
                {{#socialMedia}}
                <li><a att href="{{link}}"><img src="{{icon}}" />{{name}}</a></li>
                {{/socialMedia}}
            </ul>
        </div>
        <div col="1/3">
            <h5>Credits</h5>
            <ul class="link-list">
                <li><a att href="https://barecss.com">BareCSS</a></li>
                <li><a att href="https://icons8.com">Icons from icons8</a></li>
            </ul>
        </div>
        <div col="1/3">
            <h5>Contact Me</h5>
            <textarea xx class="contact-form" id="footer-tmpl-contact-content" placeholder="Type a message"></textarea>
            <button style="margin-bottom: 0;" onclick="javascript:contactButton()">
                Contact
            </button
        </div>
    </grid>

    <style>
    #footer-tmpl-contact-content {
        background-color: rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.9);
        font-family: Roboto, Helvetica, Arial, sans-serif;
        padding: 1rem;
        border: none;
        margin-bottom: 0.2rem;
        resize: none;
    }
    #footer-tmpl-contact-content::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }
    </style>
    <script>
    function contactButton() {
        const text = document.getElementById('footer-tmpl-contact-content').value;
        const uri = encodeURI(`mailto:craigmc08@gmail.com?body=${text}`);
        const shadowLink = document.createElement('a');
        shadowLink.setAttribute('href', uri);
        shadowLink.setAttribute('target', '_blank');
        shadowLink.click();
    }
    </script>
</footer>